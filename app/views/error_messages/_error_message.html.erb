<div id="<%= dom_id(error_message) %>">
  <div class="flex flex-col md:flex-row items-center px-4 py-4 sm:px-6 justify-between">
    <div class="flex-1">
      <%= link_to error_message.status_code,
        edit_error_message_path(error_message),
        class: "text-lg text-blue-600 hover:text-blue-700",
        data: {
          action: "click->slideover#open",
          remote: true
        } %>
      <div class="flex space-x-2 text-gray-500 text-sm">
        <div>
          <%= error_message.message %>
        </div>
        <div>
          <%= error_message.reference %>
        </div>
      </div>
    </div>
    <div class="text-right">
      <%= button_to "Delete",
        error_message_path(error_message),
        method: :delete,
        class: "btn border border-red-200 hover:bg-red-100 text-sm text-red-700",
        remote: true,
        data: {
          confirm: "Are you sure?"
        } %>
    </div>
  </div>
</div>
